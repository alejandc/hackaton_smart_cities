
<div class="container-fluid centered ">
    <div class="panel-body">
      <%= form_tag("/m/carga_trayecto", method: "post") do %>
        <div class="form-group input-group-lg">
          <input type="text" class="form-control" name="origen" placeholder="Desde" aria-describedby="sizing-addon1">
        </div>
        <div class="form-group input-group-lg">
          <input type="text" class="form-control" name="destino" placeholder="Hasta" aria-describedby="sizing-addon1">
        </div>
        <div class="form-group ">
            <button type="button" class="btn btn-primary" value = "caminando"><i class="fa fa-male fa-2x" aria-hidden="true"></i></button>
            <button type="button" class="btn btn-primary" value = "bicicleta"><i class="fa fa-bicycle fa-2x" aria-hidden="true"></i></button>
            <button type="button" class="btn btn-primary" value = "colectivo"><i class="fa fa-bus fa-2x" aria-hidden="true"></i></button>
            <button type="button" class="btn btn-primary" value = "tren"><i class="fa fa-train fa-2x" aria-hidden="true"></i></button>
        </div>
        <button type="submit" class="btn-primary btn-lg btn-success">Buscar</button>
      <% end %>
    </div>
</div>
