<div class="row">
  <div class="col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">

    <!-- Sign In -->
    <div class="sign__container">

      <div class="panel panel-default">

        <div class="panel-heading">
          <h4 class="panel-title">
            Crear nueva cuenta
          </h4>
        </div> <!-- / .panel-heading -->

        <div class="panel-body">

            <div class="form-group">
              <label for="sign-up__name">Tu nombre</label>
              <input  type="text" class="form-control"></input>
            </div>

            <div class="form-group">
              <label for="sign-up__email">Tu email</label>
              <input  type="text" class="form-control"></input>
            </div>

            <div class="form-group">
              <label for="sign-up__name">Tu número SUBE</label>
              <input  type="text" class="form-control"></input>
            </div>

            <div class="form-group">
              <label for="sign-up__password">Contraseña</label>
              <input  type="text" class="form-control"></input>
            </div>

            <div class="form-group">
              <label for="sign-up__password_confirmation">Repetir contraseña</label>
              <input  type="text" class="form-control"></input>
            </div>

            <div class="row">
              <div class="col-sm-8">
                <div class="checkbox">
                  <input type="checkbox" id="remember-me">
                  <label for="remember-me">
                    Acepto <a href="#">Términos y Condiciones</a>
                  </label>
                </div>
              </div>
              <div class="col-sm-4 text-right">
                <button type="submit"></button>
              </div>
            </div>
        </div> <!-- / .panel-body -->

      </div> <!-- / .panel -->

      <p class="sign__extra text-muted text-center">
      </p>

    </div> <!-- / .sign__conteiner -->

  </div>
</div>
