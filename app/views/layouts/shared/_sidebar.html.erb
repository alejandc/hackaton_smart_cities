<div class="sidebar">

  <!-- Close button (mobile devices) -->
  <!-- <div class="sidebar__close">
    <img src="assets/img/close.svg" alt="Close sidebar">
  </div> -->

  <!-- Sidebar user -->
  <div class="sidebar__user">

    <!-- Sidebar user avatar -->
    <div class="sidebar-user__avatar">
      <%= image_tag('empty-user.png') %>
    </div>

    <!-- Sidebar user info -->
    <div class="sidebar-user__info">
      <h4>Roberto Lopez</h4>
      <p>Administrator</p>
    </div>

  </div>

  <!-- Sidebar nav -->
  <nav>
    <ul class="sidebar__nav">
      <li class="sidebar-nav__heading">Secciones</li>
      <li id='dashboard_lnk'>
        <%= link_to "<i class='fa fa-th-large'></i>".html_safe + " Dashboard", root_path %>
      </li>
      <li id='suggestions_lnk'>
        <%= link_to "<i class='fa fa-commenting'></i>".html_safe + " Sugerencias", suggestions_path %>
      </li>
      <li id='incidents_lnk'>
        <%= link_to incidents_path do %>
          <i class="fa fa-exclamation-circle"></i>
          Incidencias
        <% end %>
      </li>
      <li id='notifications_lnk'>
        <%= link_to "<i class='fa fa-envelope'></i>".html_safe + " Notificaciones", notifications_path %>
      </li>
    </ul>
  </nav>

</div>

<script type="text/javascript" language="javascript" charset="utf-8">
  $(function(){
    <% case controller_name %>
      <% when "dashboard" %>
        $('li#dashboard_lnk').addClass('active');

      <% when "suggestions" %>
        $('li#suggestions_lnk').addClass('active');

      <% when "incidents" %>
        $('li#incidents_lnk').addClass('active');

      <% when "notifications" %>
        $('li#notifications_lnk').addClass('active');

      <% else %>
        <%= nil %>
    <% end %>
  })
</script>
