<div class="row">
  <div class="col-xs-12">

    <h3 class="page-header">
      Sugerencias <small>de transporte p√∫blico</small>
    </h3>

  </div>
</div> <!-- / .row -->

<div class="row">
  <div class="col-xs-12">

    <!-- Orders -->
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Listado</h3>
      </div>

      <div class="panel-body">
        <div class="row">
          <div class="col-xs-12">
            <div class="pull-right">
              <%= link_to 'Crear Sugerencia', new_suggestion_path, class: 'btn btn-primary mb_sm' %>
            </div>
          </div>
        </div>
        <% if @suggestions.empty? %>
          <div class="alert alert-info alert-dismissible" role="alert">
              <strong>Sin sugerencias!</strong>
              Por el momento no hay sugerencias cargadas.
          </div>
        <% else %>
          <div class="table-responsive">
            <table class="table" id="orders__table">
              <thead>
                <tr>
                  <th>Sugerencia</th>
                  <th>Referencia</th>
                  <th>Fecha Inicio</th>
                  <th>Fecha Fin</th>
                  <th>Habilitada</th>
                  <th>Puntos</th>
                  <th>Acciones</th>
                </tr>
              </thead>
              <tbody>
                <% @suggestions.each do |suggestion| %>
                  <tr>
                    <td> <%= suggestion.suggestion_type %> </td>
                    <td> <%= suggestion.reference %> </td>
                    <td> <%= suggestion.time_start.strftime("%d/%m/Y %h-%m") %> </td>
                    <td> <%= suggestion.time_end.strftime("%d/%m/Y %h-%m") %> </td>
                    <td> <%= suggestion.valid ? "POSITIVA" : "NEGATIVA" %> </td>
                    <td> <%= suggestion.points %> </td>
                    <td>  </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        <% end %>
      </div>
    </div> <!-- / .panel -->

  </div>
</div>
